<div class='new-user-container'>
  <div class='jumbotron' id='new-user-jumbo'>
    <div class='register-form-container'>
      <div class='form-inputs'>
        <%= form_for(@user) do |f| %>
          <%= f.text_field :username,placeholder: 'Username', class: 'register-input' %><br>
          <%= f.email_field :email, placeholder: 'Email', class: 'register-input' %><br>
          <%= f.password_field :password, placeholder: 'Password', class: 'register-input' %><br>
          <%= f.hidden_field :points, value: 0 %>
          <button class='btn register-submit' type='submit'>Submit</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

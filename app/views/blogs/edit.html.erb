<div class='jumbotron'>
  <h3><%= @blog.title %></h3>
  <div class='blog-form-container'>
    <%= form_for @blog, url: { action: "update" } do |f| %>
      <%= f.text_field :title, placeholder: "Title", class: "new-blog-title" %><br />
      <%= f.text_area :body, placeholder: "Body", class: "new-blog-body" %><br />
      <%= f.hidden_field :user_id, value: current_user.id %>
      <button class='btn btn-success new-blog-submit' type='submit'>Update Blog</button>
    <% end %>
  </div>
</div>
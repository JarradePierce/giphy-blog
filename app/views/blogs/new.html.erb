<div class='jumbotron'>
  <div class='blog-form-container'>
    <%= form_for @blog, url: { action: "create" } do |f| %>
      <%= f.text_field :title, placeholder: "Title", class: "new-blog-title" %><br />
      <%= f.text_area :body, placeholder: "Body", class: "new-blog-body" %><br />
      <%= f.select :category_id, @categoriesHash %>
      <%= f.select :points, @pointsHash %>
      <%= f.hidden_field :completed, value: false %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <button class='btn btn-success new-blog-submit' type='submit'>Create Blog</button>
    <% end %>
  </div>
</div>

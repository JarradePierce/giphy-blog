<div class='form-container'>
  <div class='form-inputs'>
    <%= form_tag '/login' do %>
      <%= text_field_tag :email, nil, placeholder: "Email" %>
      <%= text_field_tag :password, nil, placeholder: "Password" %>
     <button type='submit' class='btn btn-success'> Login </button>
    <% end %>
  </div>
</div>
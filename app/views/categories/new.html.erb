<div class="categories-new-div">
  <h1>Create Category</h1>
</div>
<div class='jumbotron'>
  <div class='blog-form-container'>
    <%= form_for @category, url: { action: "create" } do |f| %>
      <%= f.text_field :title, placeholder: "Title", class: "new-blog-title" %><br />
      <%= f.hidden_field :user_id, value: current_user.id %>
      <button class='btn btn-success new-blog-submit' type='submit'>Create Category</button>
    <% end %>
  </div>
</div>
